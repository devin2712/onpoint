/*****************
 * INDEX
 ****************/
 
main
	@media screen and (min-width: mq--tablet)
		margin-left 175px 

div#imagegrid
	display none
	@media screen and (min-width: mq--tablet)
		display block

div#featured_cities
	margin 2em auto
	overflow hidden
	div.city
		margin-bottom 1em
		border-radius 10px
		position relative
		a
			display block
			height 275px
			span
				display inline-block
				color color--white
				text-stroke 1px color--white
				position absolute
				bottom 0
				background rgba(color--primary, .8)
				border-radius 0 0 10px 10px
				width 100%
				text-align center
				padding .5em .25em
				font-size 16px 
				letter-spacing 1px 
			&:hover span
				background color--primary			 
	#sf
		background url(../../images/city_thumbs/sf.JPG)
		background-size cover
		background-position center
	#nyc
		background url(../../images/city_thumbs/nyc.JPG)
		background-size cover
		background-position center
	#bos
		background url(../../images/city_thumbs/bos.JPG)
		background-size cover
		background-position center
	#alb
		background url(../../images/city_thumbs/alb.JPG)
		background-size cover
		background-position center
		
		
/*****************
 * REGIONS
 ****************/
 
div#regions_nav_wrap
	@media screen and (min-width: mq--phablet)
		border-bottom 1px solid color--medium-grey
	ul#regions_nav
		list-style none
		text-align center
		@media screen and (min-width: mq--phablet)
			margin 0 auto
			position relative
			overflow hidden
		a
			display block
			font-size 22px
			color color--dark-grey
			padding 5px
			text-align center
			word-break break-word
			hyphens auto
			text-decoration none
			&:hover
				text-decoration none
		li.city
			@media screen and (max-width: mq--mobile)
				margin 3px 0
			@media screen and (min-width: mq--phablet)
				display inline
				text-align center
		li.city.active a, a:hover
			background color--primary
			border-radius 5px
			color color--white
			@media screen and (min-width: mq--phablet)
				background none
				color color--dark-grey
		li#magic_line
			@media screen and (min-width: mq--phablet)
				position absolute
				bottom 0
				left 0
				height 4px 
				background color--primary
				margin-left 0
			
