section#point_data
	color color--black
	h2, li
		font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
	h2
		font-weight bold
		font-size 2.6em
		margin-bottom 10px
	ul
		list-style-type none
	ul.address li
		font-size 1.5em
