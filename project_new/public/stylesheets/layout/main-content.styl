/*****************
 * SEARCH PAGE
 ****************/
 
section#search_data
	margin-top 1em
	div.section_title
		display inline-block
		width 100%
		padding 0 0 .25em
		border-bottom 2px solid color--primary
		h2
			font-size 1.7em
			margin 0
			float left
	div#search_history
		button.delete
			@media screen and (min-width: mq--phablet)
				margin-top 0
				height 34px
				line-height 1em
				padding 0
			float right
			margin-bottom 0
			margin-top 5px
			height 24px
			line-height .75em
			span
				font-size 1em
				padding 0 .5em
				@media screen and (min-width: mq--phablet)
					font-size: .75em
				@media screen and (min-width: mq--desktop)
					padding 0 .75em
					font-size 1em
				i
					font-size 1.25em
					vertical-align -2px
					padding 0 .25em 0 0
				i.icon-del
					@media screen and (min-width: mq--desktop)
						display inline
					display none

ul.points_list
	margin .5em 0
	li
		list-style-type none
		margin-bottom 1rem
	div.point_item
		font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
		overflow auto
		background color--light-grey
		padding .5em
		color color--dark-grey
		ul.point_item_metadata
			list-style-type none
			margin 0
			li
				display inline
				margin 0 1em 0 0
				i
					padding 0 .25em 0 0
				i.fa-comment
						vertical-align text-top
		div.point_item_image
			 width 30%
			 float left
		div.point_item_info
			width 70%
			float right
			padding 0 .5em
		h2, h3
			font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
			letter-spacing normal
			color color--dark-grey
		h2
			font-weight 400
			font-size 1.25em
			margin-bottom .5em
		h3
			font-weight 200
			font-size 1em
			margin-bottom .25em
		&:hover, &:hover h2, &:hover h3
			color color--primary

ul.search_list
	li
		list-style-type none
		margin 0 0 .5em 0
		a
			text-decoration none
			color color--dark-grey
			&:hover
				color color--primary

/*****************
 * POINT PAGE
 ****************/

section#point_breadcrumbs
	background-color color--primary
	margin 0 0 1.5em 0
	div#crumbs
		padding .5em 0
		ul
			color #FFF
			list-style-type none
			li
				display inline
				padding 0 1em 0 0
				a
					color #FFF
					text-decoration none
section#point_data
	color color--black
	padding 0 .5em 0 0
	word-break break-word
	h2, li
		font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
	h2
		font-weight bold
		font-size 2.25em
		margin-bottom .5em
	ul
		list-style-type none
		margin 0 0 1.25em 0
	ul.address li
		font-size 1.5em
		margin 0
	div.point_comments
		border-top 1px solid color--blue-grey
		padding 1.25em 0
		li
			margin 0 0 1em
			span.author
				display block
				text-align right
				font-style italic				

