/*****************
 * SEARCH PAGE
 ****************/
 
section#search_data
	div.search_meta
		margin-bottom 2em
	div.section_title
		display inline-block
		width 100%
		padding 0 0 .25em
		border-bottom 2px solid color--primary
		h2
			font-size 1.7em
			margin 0
			float left
	div#search_history
		button.delete
			@media screen and (min-width: mq--desktop)
				margin-top 0
				height 34px
				line-height 1em
			float right
			padding 0
			margin-bottom 0
			margin-top 10px
			height 24px
			line-height .75em
			span
				@media screen and (min-width: mq--desktop)
					font-size 1em
				padding 0 .5em
				font-size .75em
				i
					font-size 1.25em
					vertical-align -2px		

ul.points_list
	margin .5em 0
	li
		list-style-type none
		margin-bottom 1rem
	div.point_item
		font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
		overflow auto
		background color--light-grey
		padding .5em
		color color--dark-grey
		ul.point_item_metadata
			list-style-type none
			margin 0
			li
				display inline
				padding 0 .5em 0 0
				i
					padding 0 .25em 0 0
					text-align middle
		div.point_item_image
			 width 30%
			 float left
		div.point_item_info
			width 70%
			float right
			padding 0 .5em
		h2, h3
			font-family "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, sans-serif
			letter-spacing normal
			margin-bottom 5px
			color color--dark-grey
		h2
			font-weight 400
			font-size 1.25em
		h3
			font-weight 200
			font-size 1em


ul.search_list
	li
		list-style-type none
		a
			text-decoration none
			color color--dark-grey
			

