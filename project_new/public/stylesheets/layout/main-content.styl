/*****************
 * INDEX
 ****************/
 
main
	@media screen and (min-width: mq--tablet)
		margin-left 175px 

div#imagegrid
	display none
	@media screen and (min-width: mq--tablet)
		display block
		margin 1em 0

div#featured_cities
	margin 2em auto
	overflow hidden
	div.city
		margin-bottom 1em
		border-radius 10px
		position relative
		a
			display block
			height 275px
			span
				display inline-block
				color color--white
				text-stroke 1px color--white
				position absolute
				bottom 0
				background rgba(color--primary, .8)
				border-radius 0 0 10px 10px
				width 100%
				text-align center
				padding .5em .25em
				font-size 16px 
				letter-spacing 1px 
			&:hover span
				background color--primary			 
	#sf
		background url(../../images/city_thumbs/sf.JPG)
		background-size cover
		background-position center
	#nyc
		background url(../../images/city_thumbs/nyc.JPG)
