/*****************
 * REGIONS
 ****************/
 
div#regions_nav_wrap
	@media screen and (min-width: mq--phablet)
		border-bottom 1px solid color--medium-grey
	ul#regions_nav
		list-style none
		text-align center
		@media screen and (min-width: mq--phablet)
			margin 0 auto
			position relative
			overflow hidden
		a
			display block
			font-size 22px
			color color--dark-grey
			padding 5px
			text-align center
			text-decoration none
			&:hover
				text-decoration none
		li.city
			@media screen and (max-width: mq--phablet)
				margin .25em 0
			@media screen and (min-width: mq--phablet)
				display inline
				text-align center
			a
				padding .5em 0
		li.city.active a, a:hover
			background color--primary
			border-radius 5px
			color color--white
			@media screen and (min-width: mq--phablet)
				background none
				color color--dark-grey
		li#magic_line
			@media screen and (min-width: mq--phablet)
				position absolute
				bottom 0
				left 0
				height 4px 
				background color--primary
				margin-left 0
			
